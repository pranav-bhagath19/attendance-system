rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Teacher profile verification (Allows auto-creation on login)
    match /teachers/{teacherId} {
      allow read, write: if request.auth != null && request.auth.uid == teacherId;
    }

    // Class ownership verification
    match /classes/{classId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.teacher_id;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.teacher_id;
    }

    // Students foreign-key ownership verification
    match /students/{studentId} {
      allow read, update, delete: if request.auth != null && 
        request.auth.uid == get(/databases/$(database)/documents/classes/$(resource.data.class_id)).data.teacher_id;
      allow create: if request.auth != null && 
        request.auth.uid == get(/databases/$(database)/documents/classes/$(request.resource.data.class_id)).data.teacher_id;
    }

    // Attendance validation
    match /attendance/{doc} {
      allow read, update, delete: if request.auth != null && 
        request.auth.uid == resource.data.teacherId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.teacherId;
    }
  }
}
